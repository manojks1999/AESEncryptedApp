<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/Name"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_marginTop="150dp"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_person_icon"
        android:layout_height="60dp"/>
    <EditText
        android:id="@+id/room_id"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/RoomID"
        android:inputType="text"
        android:drawableStart="@drawable/custom_room_icon"
        android:textSize="14sp"
        android:layout_height="60dp"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:layout_below="@id/name"/>
    <EditText
        android:id="@+id/room_key"
        android:layout_below="@id/room_id"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="@string/Key"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="70dp"
        android:drawableStart="@drawable/custom_key_icon"
        android:background="@drawable/custom_input"
        android:layout_height="60dp"/>
    <Button
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:text="Join"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/room_key"
        android:onClick="join"
        android:background="@drawable/my_button"
        android:layout_height="wrap_content"/>

</RelativeLayout>